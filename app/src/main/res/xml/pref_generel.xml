<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference android:title="@string/pref_location_lable"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"/>
    <ListPreference android:title="Units"
        android:key="unit"
        android:entries="@array/unit_name_array"
        android:entryValues="@array/unit_value_array"
        android:defaultValue="@string/unit_default"/>

</PreferenceScreen>